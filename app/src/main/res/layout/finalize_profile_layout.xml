<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white200"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutconst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="76dp">

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="266dp"
                android:background="@color/primary500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingMultiplier="1.4"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="76dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_bold"
                android:lineSpacingMultiplier="1.25"
                android:maxWidth="153dp"
                android:text="Complete seu Perfil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:layout_editor_absoluteX="122dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/shape_card"
                android:elevation="3dp"
                android:paddingHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:fontFamily="@font/barlow_bold"
                    android:lineSpacingMultiplier="1.25"
                    android:text="Mateus Santana"
                    android:textAlignment="center"
                    android:textColor="@color/gray500"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtFinalizeMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Email"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputFinalizeEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <EditText
                    android:id="@+id/inputFinalizeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="textEmailAddress"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizeMail" />

                <TextView
                    android:id="@+id/txtFinalizePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Telefone celular"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputFinalizePhone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputFinalizeEmail" />

                <EditText
                    android:id="@+id/inputFinalizePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="phone"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizePhone" />

                <TextView
                    android:id="@+id/txtFinalizeCEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="CEP"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputFinalizeCEP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputFinalizePhone" />

                <EditText
                    android:id="@+id/inputFinalizeCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="number"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizeCEP" />

                <TextView
                    android:id="@+id/txtFinalizeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Bairro"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputFinalizeLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputFinalizeCEP" />

                <EditText
                    android:id="@+id/inputFinalizeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="text"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizeLocation" />

                <TextView
                    android:id="@+id/txtFinalizeCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Cidade"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputFinalizeCity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputFinalizeLocation" />

                <EditText
                    android:id="@+id/inputFinalizeCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="text"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizeCity" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnFinalizeAccount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/shape_btn_border"
                android:backgroundTint="@color/primary500"
                android:fontFamily="@font/barlow_bold"
                android:lineSpacingMultiplier="1.6"
                android:text="@string/btn_confirm_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="886dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:translationZ="6dp"
                android:contentDescription="Imagem de perfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:srcCompat="@drawable/bg_example_profile" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>