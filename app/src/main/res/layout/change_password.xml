<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white200"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutconst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="76dp">

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="266dp"
                android:background="@color/primary500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingMultiplier="1.4"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="76dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_bold"
                android:lineSpacingMultiplier="1.25"
                android:maxWidth="153dp"
                android:text="Altere a sua senha"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:layout_editor_absoluteX="122dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/shape_card"
                android:elevation="3dp"
                android:paddingHorizontal="12dp"
                android:paddingBottom="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16">

                <TextView
                    android:id="@+id/txtFinalizeMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Email"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="textEmailAddress"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizeMail" />

                <TextView
                    android:id="@+id/txtFinalizePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Nova senha"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputNewPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

                <EditText
                    android:id="@+id/inputNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="textPassword"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizePassword" />

                <TextView
                    android:id="@+id/txtFinalizePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Confirmar nova senha"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputConfirmNewPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputNewPassword" />

                <EditText
                    android:id="@+id/inputConfirmNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="textPassword"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtFinalizePhone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/shape_btn_border"
                android:backgroundTint="@color/primary500"
                android:fontFamily="@font/barlow_bold"
                android:lineSpacingMultiplier="1.6"
                android:text="Alterar Senha"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="886dp" />

            <TextView
                android:id="@+id/txtexampasf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/inter"
                android:lineSpacingMultiplier="1.4"
                android:text="Lembrou da senha?"
                android:textColor="@color/gray500"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnChangePassword" />

            <TextView
                android:id="@+id/btnLoginNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingMultiplier="1.4"
                android:text="Entrar agora"
                android:textColor="@color/primary500"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/txtexampasf"
                app:layout_constraintTop_toTopOf="@+id/txtexampasf" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:translationZ="6dp"
                android:contentDescription="Imagem de perfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:srcCompat="@drawable/bg_avatar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>