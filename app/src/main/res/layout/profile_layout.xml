<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white200"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutconst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="56dp">

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="266dp"
                android:background="@color/primary500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:lineSpacingMultiplier="1.4"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_bold"
                android:lineSpacingMultiplier="1.25"
                android:maxWidth="153dp"
                android:text="Gerencie seu Perfil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:layout_editor_absoluteX="122dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/shape_card"
                android:elevation="3dp"
                android:paddingHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:fontFamily="@font/barlow_bold"
                    android:lineSpacingMultiplier="1.25"
                    android:text="Mateus Santana"
                    android:textAlignment="center"
                    android:textColor="@color/gray500"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtProfileMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Email"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputProfileEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <EditText
                    android:id="@+id/inputProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="textEmailAddress"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProfileMail" />

                <TextView
                    android:id="@+id/txtProfilePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Telefone celular"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputProfilePhone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputProfileEmail" />

                <EditText
                    android:id="@+id/inputProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="phone"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProfilePhone" />

                <TextView
                    android:id="@+id/txtProfileCEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="CEP"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputProfileCEP"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputProfilePhone" />

                <EditText
                    android:id="@+id/inputProfileCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="number"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProfileCEP" />

                <TextView
                    android:id="@+id/txtProfileLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Bairro"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputProfileLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputProfileCEP" />

                <EditText
                    android:id="@+id/inputProfileLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="text"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProfileLocation" />

                <TextView
                    android:id="@+id/txtProfileCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingMultiplier="1.4"
                    android:text="Cidade"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    android:labelFor="@id/inputProfileCity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inputProfileLocation" />

                <EditText
                    android:id="@+id/inputProfileCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_input_border"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="text"
                    android:lineSpacingMultiplier="1.6"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtProfileCity" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnUpdateAccount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/shape_btn_border"
                android:backgroundTint="@color/primary500"
                android:fontFamily="@font/barlow_bold"
                android:lineSpacingMultiplier="1.6"
                android:text="@string/btn_update_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="886dp" />

            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="52dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter"
                android:lineSpacingMultiplier="1.4"
                android:text="Excluir Conta"
                android:textAllCaps="false"
                android:textColor="@color/red500"
                android:textSize="14sp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnUpdateAccount"
                tools:layout_editor_absoluteX="24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:translationZ="6dp"
                android:contentDescription="Imagem de perfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:srcCompat="@drawable/bg_example_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>