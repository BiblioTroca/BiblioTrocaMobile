<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card"
    android:paddingHorizontal="16dp"
    android:paddingVertical="20dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_category_tag"
        android:fontFamily="@font/inter"
        android:lineSpacingMultiplier="1.4"
        android:paddingHorizontal="9dp"
        android:paddingVertical="4dp"
        android:text="Tecnologia"
        android:textColor="@color/primary500"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <ImageButton
        android:id="@+id/btn_options2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/shape_btn_ghost_purple"
        android:clickable="true"
        android:onClick="showPopupMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_options" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_bold"
        android:lineSpacingMultiplier="1.25"
        android:maxWidth="160dp"
        android:text="Clean code"
        android:textColor="@color/gray500"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:lineSpacingMultiplier="1.4"
        android:text="Por Robert Cecil Martin"
        android:textColor="@color/gray400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView50" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="10dp"

        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView53"
        app:layout_constraintTop_toTopOf="@+id/textView48"
        app:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/inter"
        android:lineSpacingMultiplier="1.4"
        android:text="hÃ¡ 5 dias"
        android:textColor="@color/gray500"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView51" />

    <ImageButton
        android:id="@+id/btn_options"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="236dp"
        android:background="@drawable/shape_btn_ghost_purple"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/textView50"
        app:layout_constraintTop_toTopOf="@+id/textView50"
        app:srcCompat="@drawable/bg_options"
        android:onClick="showPopupMenu"
        />
</androidx.constraintlayout.widget.ConstraintLayout>